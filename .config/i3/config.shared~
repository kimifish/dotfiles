# vifm
bindsym $mod+Return exec i3-sensible-terminal --role="vifm" --geometry=120x30 -e "TERM=tmux-256color vifm"
# tasksh
bindsym $mod+n exec i3-sensible-terminal --role="vifm" --geometry=160x45 -e "TERM=tmux-256color tasksh next"
# flameshot
bindsym $mod+Print exec flameshot gui 
# dmenu-desktop
bindsym $mod+Shift+d exec --no-startup-id i3-dmenu-desktop #dmenu_run
# dmenu
bindsym $mod+d exec --no-startup-id dmenu_run
# rofi run
bindsym $mod+semicolon exec rofi -show run -lines 20 -eh 1.3 -opacity "90" -bw 0 -bc "$bg-color" -bg "$bg-color" -fg "$text-color" -hlbg "$text-color" -hlfg "$bg-color"
# rofi drun
bindsym $mod+Shift+semicolon exec rofi -show drun -modi drun -lines 20 -eh 1.3 -opacity "90" -bw 0 -bc "$bg2-color" -bg "$bg2-color" -fg "$text-color" -hlbg "$text-color" -hlfg "$bg2-color" 
# rofi window
bindsym $mod+apostrophe exec rofi -show window -modi window -lines 20 -eh 1.3 -opacity "90" -bw 0 -bc "$bg3-color" -bg "$bg3-color" -fg "$text-color" -hlbg "$text-color" -hlfg "$bg3-color" 
