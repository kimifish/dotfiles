# Other binds {{{
# in case of layout change event - send signal to i3blocks
bindsym --release ISO_Next_Group exec pkill -RTMIN+1 i3blocks

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# lock screen
#bindsym Control+Shift+PgUp exec "terminology -e vifm"
bindsym $mod+Pause exec screenlock lock
bindsym $mod+Control+Pause exec ". $HOME/bin/autolock-screen-switch.sh"

bindsym --release $mod+Shift+Pause exec monitorcontrol off
# }}}

# Resize mode {{{
# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 3 px
        bindsym j resize grow height 3 px
        bindsym k resize shrink height 3 px
        bindsym l resize grow width 3 px

        # same bindings, but for the arrow keys
        #bindsym Left resize shrink width 3 px or 3 ppt
        #bindsym Left resize shrink width 3 px or 3 ppt
        #bindsym Down resize grow height 3 px or 3 ppt
        #bindsym Up resize shrink height 3 px or 3 ppt
        bindsym Right resize grow width 3 px
        bindsym Down resize grow height 3 px
        bindsym Up resize shrink height 3 px
        bindsym Right resize grow width 3 px

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# }}}
#
# Launcher mode {{{
#Press $mod+o followed by either f, t, Escape or Return to launch firefox,
# thunderbird or return to the default mode, respectively.
set $mode_launcher Launch: [f]irefox [t]hunderbird
bindsym $mod+o mode "$mode_launcher"

mode "$mode_launcher" {
    bindsym f exec $exorf firefox
    bindsym m exec $exorf thunderbird
    bindsym j exec $exorf jb-toolbox
    bindsym t exec $exorf telegram
    bindsym q exec $exorf qbittorrent


    bindsym Escape mode "default"
    bindsym Return mode "default"
} #}}}

