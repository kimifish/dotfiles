# ================= SHARED SETTINGS ========================
#
set $mod Mod4
set $modcodeR 134
set $modcodeL 133
set $exorf $HOME/kimiside@gmail.com/bin/exec_or_focus.sh

# Settings {{{
#
# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
#font pango:monospace 8
font pango:DejaVu Sans Mono 6

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
#font pango:DejaVu Sans Mono 8

# Before i3 v4.8, we used to recommend this one as the default:
# font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, its unicode glyph coverage is limited, the old

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Setting keyboard layout
#exec setxkbmap ''"pc+inet(evdev)+us+level3(ralt_switch),ru" -option grp:caps_toggle -option grp_led:scroll'
exec --no-startup-id 'setxkbmap "pc+inet(evdev)+us+level3(ralt_switch),ru" -option grp:caps_toggle -option grp_led:scroll'

# Focus on window activation
# (smart | urgent | focus | none)
focus_on_window_activation focus

focus_follows_mouse no
# }}}

# Colors {{{
set $background #10101000
set $foreground #ffffff
set $gray       #d0d0d0

#set $primary	#588c7e
#set $secondary	#e9ce49
#set $tertiary	#f2ae72
#set $additional	#d96459

# green-gray
set $primary    #82b74b
set $secondary  #405d27
set $tertiary   #3e4444
set $additional #c1946a
#
set $warning    #E7176A


 # colors                BORDER      BACKGROUND TEXT        INDICATOR
client.focused          $primary    $primary   $foreground $primary
client.focused_inactive $secondary  $secondary $background $secondary
client.unfocused        $tertiary   $tertiary  $background $tertiary
client.urgent           $gray       $gray      $foreground $gray  
 
# }}}

# Positioning apps {{{
assign [class="Firefox"] 1
assign [class="Chromium"] 1
assign [class="qbittorrent"] 1
assign [class="hollow_knight"] 2
assign [class="csgo"] 2
assign [class="(?)Steam"] 2
assign [class="Thunderbird"] 4
assign [class="telegram"] 6
#assign [class="dagor2"] 2
# }}}

# Apps binds {{{

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal -e "mc /home/kimifish" --role="floating terminal" --geometry=160x50

bindsym $mod+Print exec flameshot gui -p $HOME/Документы/Скриншоты

# start dmenu (a program launcher)
bindsym $mod+Shift+d exec i3-dmenu-desktop #dmenu_run
bindsym $mod+d exec dmenu_run

set $bg-color #2f343f
set $text-color #f3f4f5
bindsym $mod+semicolon exec rofi -show run -lines 20 -eh 1.3 -opacity "90" -bw 0 -bc "$bg-color" -bg "$bg-color" -fg "$text-color" -hlbg "$text-color" -hlfg "$bg-color"
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

bindsym $mod+Control+t exec $exorf telegram
bindsym $mod+Control+f exec $exorf Firefox
bindsym $mod+Control+m exec $exorf thunderbird

# }}}

# Specific windows {{{
# for window class run xprop in terminal
#  # Threshold max window size, depends on your display size
#floating_maximum_size 1920 1080
# Tell every window to behave centered.
for_window [class=".*"] move absolute position center
# If somehow a window dare to display outside the display,
# force it with the following keybinding to center its
# position
bindsym $mod+c move absolute position center

for_window [window_role="floating terminal"] floating enable
for_window [class="vlc"] floating enable
for_window [window_role="htop"] floating enable
# for_window [class="dagor2"] floating disable
# for_window [class="Totalcmd.exe"] floating enable
# for_window [title="kimiHome"] floating enable
# for_window [title="kimiHome"] resize set 640 960
# for_window [title="https://www.youtube.com -"] floating disable
# for_window [title="https://www.youtube.com -"] resize set height 360 px

for_window [title="Картинка в картинке"] sticky enable
for_window [class="vlc"] sticky enable


for_window [class="hollow_knight"] fullscreen enable
#for_window [class="(?)Steam"] fullscreen enable
# }}}

# Bot binds {{{

bindsym $mod+minus exec $HOME/.config/i3blocks/volume -5
bindsym $mod+equal exec $HOME/.config/i3blocks/volume +5
bindsym $mod+F9 exec bot prev
bindsym $mod+F12 exec bot next
bindsym $mod+F11 exec bot pp
bindsym $mod+F10 exec bot seek 7
#bindsym $mod+F9 exec mpc prev
#bindsym $mod+F12 exec mpc next
#bindsym $mod+F11 exec mpc toggle
#bindsym $mod+F10 exec mpc seek -7
# }}}
#
# Multimedia keys binds {{{
bindsym XF86AudioRaiseVolume exec $HOME/.config/i3blocks/volume +5 #increase sound volume
bindsym XF86AudioLowerVolume exec $HOME/.config/i3blocks/volume -5
bindsym XF86AudioMute exec bot mute_if # mute sound

bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness
#
bindsym XF86AudioPlay exec bot pp
bindsym XF86AudioPause exec bot pause
bindsym XF86AudioNext exec bot next
bindsym XF86AudioPrev exec bot prev

bindsym XF86HomePage exec "firefox --new-window http://192.168.1.150:8080/basicui/app&sitemap=kimihome --window-size 640,960"

bindsym XF86Explorer exec i3-sensible-terminal --role="floating terminal" --command="tmux new-session" --hide-menubar
# }}}

# Window binds ---------------------- {{{
# kill focused window
bindsym $mod+Shift+q kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+minus split h

# split in vertical orientation
bindsym $mod+backslash split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+w floating toggle

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+Shift+a focus child

# sticky window enable
bindsym $mod+Shift+s sticky toggle

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10
# }}}

# Other binds {{{
# in case of layout change event - send signal to i3blocks
bindsym --release ISO_Next_Group exec pkill -RTMIN+1 i3blocks

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# lock screen
bindsym $mod+Pause exec screenlock lock
bindsym $mod+Control+Pause exec ". $HOME/bin/autolock-screen-switch.sh"

bindsym --release $mod+Shift+Pause exec monitorcontrol off
# }}}

# Resize mode {{{
# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 3 px
        bindsym j resize grow height 3 px
        bindsym k resize shrink height 3 px
        bindsym l resize grow width 3 px

        # same bindings, but for the arrow keys
        #bindsym Left resize shrink width 3 px or 3 ppt
        #bindsym Left resize shrink width 3 px or 3 ppt
        #bindsym Down resize grow height 3 px or 3 ppt
        #bindsym Up resize shrink height 3 px or 3 ppt
        bindsym Right resize grow width 3 px
        bindsym Down resize grow height 3 px
        bindsym Up resize shrink height 3 px
        bindsym Right resize grow width 3 px

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# }}}
#
# Launcher mode {{{
#Press $mod+o followed by either f, t, Escape or Return to launch firefox,
# thunderbird or return to the default mode, respectively.
set $mode_launcher Launch: [f]irefox [t]hunderbird
bindsym $mod+o mode "$mode_launcher"

mode "$mode_launcher" {
    bindsym f exec $exorf firefox
    bindsym m exec $exorf thunderbird
    bindsym j exec $exorf jb-toolbox
    bindsym t exec $exorf telegram
    bindsym q exec $exorf qbittorrent


    bindsym Escape mode "default"
    bindsym Return mode "default"
} #}}}

